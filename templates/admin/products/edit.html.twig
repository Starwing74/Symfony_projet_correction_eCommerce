{% extends 'base.html.twig' %}

{% block title %}
    {% if isAdd %}
        Ajout d'un produit
    {% else %}
        Modification du produit {{ product.name }}
    {% endif %}
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_rest(form) }}
        <input type="submit" value="Valider !" />
    {{ form_end(form) }}

    <a href="{{ path('products_index') }}">Retour liste produits</a>
{% endblock %}
