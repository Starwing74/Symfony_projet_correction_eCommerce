<div style="display: flex; flex-direction: column; margin: 8px">
    <a href="{{ path('products_get', { id: product.id}) }}">
        {% if product.photo is not null %}
            <img src="/{{ product.photo }}" alt="Image pour {{ product.name }}" />
        {% else %}
            <img src="/assets/no_image.jpg" alt="Aucune image pour {{ product.name }}" />
        {% endif %}
    </a>
    <a href="{{ path('products_get', { id: product.id}) }}"><b>{{ product.name }}</b></a>
</div>
