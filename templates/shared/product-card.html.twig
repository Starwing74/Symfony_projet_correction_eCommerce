<div style="display: flex; flex-direction: column; margin: 8px">
    {% if product.photo is not null %}
    <a href="{{ path('products_get', { id: product.id}) }}"><img src="/{{ product.photo }}" alt="{{ product.name }}" /></a>
    {% endif %}
    <a href="{{ path('products_get', { id: product.id}) }}"><b>{{ product.name }}</b></a>
</div>
